!!! 5
html(lang='en')
  head
    base(href='#{baseHref}')
    !{templateScripts}
    !{externalAssets}
    !{popcorn}
    link(rel='stylesheet', href='http://192.168.209.145/playback/presentation/css/bbb.playback.css')
    link(rel='stylesheet', href='/css/embed.css')
    link(rel='stylesheet', href="/css/controls.css")
    // This is the embed, the actual content is at the following URL
    link(rel='cannonical', href='/v/#{id}.html')
    style
      @-o-viewport { width: device-width; }
      @-moz-viewport { width: device-width; }
      @-ms-viewport { width: device-width; }
      @-webkit-viewport { width: device-width; }
      @viewport { width: device-width; }
    script(src='/src/embed.js')
  body(id='remix')
    #container.container
      div(id='playbackArea', class='clearfix', role='main')
        div(id='thumbnails', role='region', aria-label='Slide thumbnails')
        div(id='presentation')
          div(id='slide', role='region', aria-label='Slide')
          div(id='slideText', class='visually-hidden', role='polite')
        div(id='cursor', class='circle', style='visibility:hidden;')
        div(class='chatcontainer')
          div(id='chat', aria-live='polite', role='region', aria-label='Chat me')
          div(id='videoRecordingWrapper', role='region', aria-label='Video')
            div(id='video-container', class='video-container-wrapper', data-butter='target')
              div(id='video', data-butter='media')
      #controls.controls(style='display: none;')
